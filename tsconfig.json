{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },  
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}